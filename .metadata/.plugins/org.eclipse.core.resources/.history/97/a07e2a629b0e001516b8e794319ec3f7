package week2examples.day2;

import java.text.DecimalFormat;

public class DecimalFormatClassExample
{

	public static void main(String[] args)
	{
		DecimalFormat mDecimalFormat = new DecimalFormat("R ###,###.00");
		double price = 2333666.76;
		
		
		
		System.out.println("The formatted number is now " + mDecimalFormat.format(price));
	}

}
